{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="POST" class="form-horizontal">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <fieldset>
        <legend>Connexion</legend>
        <div class="form-group">
            <label for="username" class="col-lg-2 control-label">{{ 'security.login.username'|trans }}</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-lg-2 control-label">{{ 'security.login.password'|trans }}</label>
            <div class="col-lg-10">
                <input type="password" id="password" class="form-control" name="_password" required="required" />
                <div class="checkbox">
                    <label for="remember_me" class="col-lg-2 control-label">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />{{ 'security.login.remember_me'|trans }}
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-primary">Connexion</button>
            </div>
        </div>
    </fieldset>
</form>