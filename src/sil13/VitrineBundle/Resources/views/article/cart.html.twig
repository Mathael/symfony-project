{% extends '::base.html.twig' %}

{% block body %}
<table class="table table-striped table-hover ">
    <thead>
    <tr>
        <th>Nom</th>
        <th>Quantit√©</th>
        <th>Prix</th>
    </tr>
    </thead>
    <tbody>
        {% if cart != null %}
        {% for order in cart.orders %}
        <tr>
            <td>{{ order.article.name }}</td>
            <td>{{ order.count }}</td>
            {% set price = order.count * order.article.price %}
            <td>{{ price }}</td>
        </tr>
        {% endfor %}
        {% endif %}
    </tbody>
</table>
{% endblock %}
